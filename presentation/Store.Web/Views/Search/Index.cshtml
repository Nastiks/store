@using Store
@model Jewelry[]

@{
    ViewData["Title"] = "Результаты поиска";
}

<h1>Результаты поиска</h1>

@if (Model.Length == 0)
{
    <p>Ничего не найдено.</p>
}
else
{
    <ul>
        @foreach (var jewelry in Model)
        {
            <li><a href="@Url.Action("Index", "Jewelry", new { id = jewelry.Id })">@jewelry.Title</a></li>
        }
    </ul>
}
